<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Inertial for a sphere -->
  <xacro:macro name="inertial_sphere">
    <xacro:params mass radius *origin />

    <inertial>
      <xacro:insert_block name="origin"/>
      <mass value="${mass}"/>
      <inertia
        ixx="${(2.0/5.0) * mass * radius * radius}" ixy="0.0" ixz="0.0"
        iyy="${(2.0/5.0) * mass * radius * radius}" iyz="0.0"
        izz="${(2.0/5.0) * mass * radius * radius}"/>
    </inertial>
  </xacro:macro>

  <!-- Inertial for a box -->
  <xacro:macro name="inertial_box">
    <xacro:params mass x y z *origin />

    <inertial>
      <xacro:insert_block name="origin"/>
      <mass value="${mass}"/>
      <inertia
        ixx="${(1.0/12.0) * mass * (y*y + z*z)}" ixy="0.0" ixz="0.0"
        iyy="${(1.0/12.0) * mass * (x*x + z*z)}" iyz="0.0"
        izz="${(1.0/12.0) * mass * (x*x + y*y)}"/>
    </inertial>
  </xacro:macro>

  <!-- Inertial for a cylinder -->
  <xacro:macro name="inertial_cylinder">
    <xacro:params mass length radius *origin />

    <inertial>
      <xacro:insert_block name="origin"/>
      <mass value="${mass}"/>
      <inertia
        ixx="${(1.0/12.0) * mass * (3*radius*radius + length*length)}" ixy="0.0" ixz="0.0"
        iyy="${(1.0/12.0) * mass * (3*radius*radius + length*length)}" iyz="0.0"
        izz="${(0.5) * mass * radius * radius}"/>
    </inertial>
  </xacro:macro>

</robot>
